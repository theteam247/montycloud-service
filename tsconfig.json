{
    "compilerOptions": {
        "target": "ES5",
        "lib": [
        "dom",
        "dom.iterable",
        "ESNext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
  